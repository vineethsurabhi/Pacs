{
  "name": "pacs_explorer",
  "version": "1.0.0",
  "description": "Allows users to upload DICOM files to the predible cloud for processing.",
  "build": {
    "appId": "com.electron.PacsExplorer",
    "productName": "PACS Explorer",
    "copyright": "Copyright Â© 2017 Predible",
    "asar": true,
    "win": {
      "target": "nsis",
      "publisherName": "Predible Health"
    },
    "files": [
      "js/**",
      "images/**",
      "css/**",
      "*.html",
      "*.js",
      "*.md",
      "!*.tar.gz",
      "*.json"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "createDesktopShortcut": true,
      "installerHeader": "build/header.png"
    }
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder .",
	"postinstall": "npm run package",
	"lint": "eslint ."
  },
  "author": "Predible",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "~1.7.9",
    "electron-builder": "^19.43.0"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "get-folder-size": "^1.0.0",
    "moment": "^2.19.1",
    "request": "^2.83.0",
    "tar-fs": "^1.16.0"
  }
}
